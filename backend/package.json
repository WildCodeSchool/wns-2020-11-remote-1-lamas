{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "engines": {
    "node": "10.15.2",
    "npm": "6.14.1"
  },
  "scripts": {
    "start": "node dist/src/index.js",
    "lint": "eslint . ",
    "fix:lint": "eslint . --fix",
    "heroku-postbuild": "cd frontend && npm install && npm run build",
    "test": "jest --watchAll --no-cache --runInBand",
    "test:ci": "jest --no-cache --runInBand",
    "build": "tsc",
    "start:watch": "tsc -w & nodemon dist/src/index.js",
    "server": "nodemon src/index.ts",
    "client": "npm start --prefix frontend",
    "dev": "ts-node-dev --transpile-only --respawn  ./src/index.ts",
    "redis": "ts-node-dev --transpile-only --respawn  ./src/database/redis.ts"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "<rootDir>/frontend"
    ],
    "setupFilesAfterEnv": [
      "./src/test/setup.ts"
    ],
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@graphql-tools/merge": "^6.2.6",
    "@types/validator": "^13.1.3",
    "apollo-errors": "^1.9.0",
    "apollo-server": "^2.19.0",
    "apollo-server-express": "^2.19.0",
    "apollo-server-integration-testing": "^2.3.0",
    "apollo-server-testing": "^2.19.0",
    "bcrypt": "^5.0.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.4.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.8",
    "redis": "^3.0.2",
    "socket.io": "^3.0.1",
    "typescript": "^4.1.3",
    "validator": "^13.5.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.19",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.10.3",
    "@types/redis": "^2.8.28",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "eslint": "^7.13.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "26.4.2",
    "mongodb-memory-server": "^6.9.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.1"
  }
}
