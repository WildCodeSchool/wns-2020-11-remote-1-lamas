    "node": "10.15.2",
    "npm": "6.14.1"
  },
  "scripts": {
    "start": "nodemon dist/src/index.js",
    "heroku-postbuild": "tsc & cd frontend && npm install && npm install --only=dev --no-shrinkwrap && npm run build",
    "lint": "eslint src/*/ frontend --fix",
    "test": "jest --watchAll --no-cache",
    "test:watch": "jest --watch",
    "build": "tsc",
    "start:watch": "tsc -w & nodemon dist/src/index.js",
    "server": "nodemon src/index.ts",
    "client": "npm start --prefix frontend",
    "dev": "ts-node-dev --transpile-only --respawn  ./src/index.ts"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "<rootDir>/frontend"
    ],
    "setupFilesAfterEnv": [
      "./src/test/setup.ts"
    ],
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    }
  },
  "author": "",
  "license": "ISC",
